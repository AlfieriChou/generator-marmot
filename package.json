{
  "name": "generator-marmot",
  "version": "0.1.3",
  "description": "Marmot generator.",
  "homepage": "https://github.com/AlfieriChou/generator-marmot",
  "author": {
    "name": "AlfieriChou",
    "email": "alfierichou@gmail.com",
    "url": "https://github.com/AlfieriChou"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "marmot",
    "yeoman-generator"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "coveralls": "^3.0.7",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-standard": "^3.0.1",
    "husky": "^3.0.9",
    "jest": "^24.8.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "standard-version": "^8.0.1",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "lodash": "^4.17.15",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "yarn run lint",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-standard"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "scripts": {
    "pretest": "yarn run lint",
    "test": "jest",
    "release": "standard-version",
    "lint": "eslint --ext .js ./ --fix"
  },
  "repository": "https://github.com/AlfieriChou/generator-marmot",
  "license": "MIT"
}
